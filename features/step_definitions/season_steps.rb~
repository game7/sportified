Given /^the following seasons:$/ do |seasons|
  Season.create!(seasons.hashes)
end

When /^I delete the (\d+)(?:st|nd|rd|th) season$/ do |pos|
  visit seasons_path
  within("table tr:nth-child(#{pos.to_i+1})") do
    click_link "Destroy"
  end
end

Then /^I should see the following seasons:$/ do |expected_seasons_table|
  expected_seasons_table.diff!(tableish('table tr', 'td,th'))
end
