html, body {
  min-height: 100%;
}

#wrapper {
  min-height: 600px;
  display: flex;
  flex-direction: column;
}

#main {
  display: flex;
  flex-direction: column;
  flex-grow: 1; 
}

.pull-right {
  float: right;
}

.clear {
  clear: both;
}

:root {
  --primary-color: 36, 36, 122;
  --primary-text-color: 256, 256, 256;
}

#desktop.menu,
#mobile.menu {
  background-color: rgba(var(--primary-color), 1);
}

body, 
body.pushable > .pusher {
  background-image: url(<%= asset_path 'themes/styfl/football_field_grayscale.jpg' %>);
  background-position: center top;
  background-repeat:no-repeat;
  background-attachment: fixed;
  background-size: cover;
}

#site_title {
  display: block;
}

#site_logo {
  display: none;
}

body[data-path="pages/home"] header {
  display: none;
}

#footer .ui.container {
  background-color: #000;
}

.ui.primary.buttons .button,
.ui.primary.button {
  background-color: rgba(var(--primary-color), 1);
}

.ui.primary.buttons .button:hover,
.ui.primary.button:hover,
.ui.primary.buttons .button:focus,
.ui.primary.button:focus,
.ui.primary.buttons .button:active,
.ui.primary.button:active,
.ui.primary.buttons .active.button,
.ui.primary.buttons .active.button:active,
.ui.primary.active.button,
.ui.primary.button .active.button:active {
  background-color: rgba(var(--primary-color), 0.6);
  color: rgba(var(--primary-text-color), 1);
}

.blocks_feed h3,
.blocks_markup h3,
.blocks_event_feed h3,
.blocks_text h3 {
  border-left: 5px solid #ccc;
  padding-left: 20px;
  line-height: 30px;
  text-transform: uppercase;
  background-color: #f1f4f5;
  background-color: rgba(var(--primary-color), 1);
  color: #FFF;
}