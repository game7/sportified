:scss

  .outer {
    width: 100%;
    height: 100%;
    font-family: 'Rubik';
  }

  .header,
  .footer {
    height: 60px;
    background-color: #000;
  }

  .main {
    height: 600px;
    padding: 10px;
    overflow: hidden;
  }


  .event {

    margin-bottom: 5px;

    .time,
    .summary,
    .team,
    .locker_room {
      background-color: maroon;
      background-color: #800000;
      badkground-color: #8C1D40;
      //background-color: #990033;
      color: white;
      opacity: 1;
      font-weight: bold;
      height: 60px;
      line-height: 60px;
      font-size: 36px;
    }

    &.even {
      .time,
      .summary,
      .team,
      .locker_room {
        background-color: #FFC627;
        color: black;
      }
    }

    .time {
      text-align: right;
      padding-right: 10px !important;
      width: 180px;
      margin-right: 5px;
      &.teams {
        height: 125px;
      }
    }

    .summary {
      padding-left: 10px !important;
      margin-right: 5px;
      width: 945px;
    }

    .team {
      padding: 0;
      padding-left: 10px !important;
      margin-right: 5px;
      height: 60px;
      width: 1010px;
    }

    .locker_room {
      text-align: center;
      vertical-align: middle;
      font-size: 36px;
      font-weight: 900;
      width: 60px;
      height: 60px;
      padding: 0;
    }


    .time,
    .subject {
      float: left;
    }

    .teams {
      float: left;
    }

    .home_team,
    .away_team {
      .team,
      .locker_room {
        float: left;
      }
    }

    .away_team {
      margin-bottom: 5px;
    }

    .subject {
      padding: 0;

      .summary,
      .locker_room {
        float: left;
        &.away {
          margin-right: 5px;
        }
      }
    }

  }

  .title {
    text-align: center;
    font-size: 36px;
    height: 60px;
    line-height: 60px;
    color: white;
    background-color: #5C6670;
    background-color: black;
    font-weight: bold;
  }

  .datetime {
    font-size: 28px;
    line-height: 60px;
    color: white;
    margin-right: 20px;
  }

  .logo {
    height: 28px;
    margin-top: 16px;
    margin-bottom: 16px;
    margin-left: 20px;
  }


.outer
  .header
    .title Locker Room Assignments

  .main
    - rows = 0
    - @events.each do |event|
      - rows += 1
      - rows += 1 if event.try(:show_teams?)
      - next if rows > 9
      - odd_or_even = cycle('odd', 'even')
      .event.clearfix{ class: odd_or_even }
        - if (event.try(:show_teams?))
          .time.teams= event.starts_on.strftime('%-I:%M %P')
          .teams.clearfix
            .away_team.clearfix
              .team= event.away_team_custom_name.presence || event.away_team&.name
              .locker_room.away= rows
            .home_team.clearfix
              .team= event.home_team_custom_name.presence || event.home_team&.name
              .locker_room.home= rows
        - else
          .time= event.starts_on.strftime('%-I:%M %P')
          .subject.clearfix
            .summary= event.summary
            .locker_room.away= rows
            .locker_room.home= rows

  .footer.clearfilx
    .pull-left
      = image_tag('themes/oia/oia_white.svg', class: 'logo')
    .datetime.pull-right
      %span#date= Time.zone.now.strftime('%A, %b %d')
      &nbsp;
      %span#time= Time.zone.now.strftime('%l:%M %P')

:javascript
  $(function() {
    function pad(num) {
      return (num < 10 ? '0' : '') + num;
    }
    function formatTime(date) {
      var hours = date.getHours();
      var meridiem = hours < 12 ? 'am' : 'pm';
      hours = hours == 0 ? 12 : hours % 12;
      return hours + ':' + pad(date.getMinutes()) + ' ' + meridiem
    }
    function setTime() {
      console.log('gettin time')
      var date = new Date();
      $('#time').text(formatTime(new Date()));
    }
    window.setInterval(setTime, 1000)

  })
