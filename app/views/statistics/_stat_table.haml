- format_with ||= ->(value) { value }
%table.leaders.ui.celled.table
  %thead
    %tr
      %th{ :colspan => "3"}= title
  %tfoot
    %tr
      %th{ :colspan => "3"}
        %a{ :href => league_statistic_path(:league_slug => @program.slug, :division_slug => @division.slug, :season_slug => @season.slug, :view => view, :token => token) } More...
  %tbody
    - 3.times do |i|
      - record = players[i]
      %tr
        %td.logo= image_tag record.player.team.logo.thumb.url if record && record.player.team.logo?
        %td.player= record.player.full_name if record && record.player
        %td.stat= format_with.call(record[token]) if record
