- title "#{@team.name} #{@season.name} Statistics"
- content_for :banner do
  .row.banner
    = render :partial => "team", :locals => { :team => @team, :class_name => "col-xs-12" }
%h3 Player Statistics
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th NAME
      %th.span1 GP
      %th.span1 G
      %th.span1 A
      %th.span1 PTS
      %th.span1 PEN
      %th.span1 PIM
      %th.span1 MNR
      %th.span1 MJR
      %th.span1 MSC
      %th.span1 GAME      
    %tbody
      - @players.each do |skater|
        %tr
          %td
            = [skater.player.first_name, skater.player.last_name].join(" ")
            = "*" if skater.player.substitute?
          %td= skater.games_played
          %td= skater.goals
          %td= skater.assists
          %td= skater.points
          %td= skater.penalties
          %td= skater.penalty_minutes
          %td= skater.minor_penalties
          %td= skater.major_penalties
          %td= skater.misconduct_penalties
          %td= skater.game_misconduct_penalties

%h3 Goaltending Statistics
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th NAME
      %th.span1 GP
      %th.span1 TOI
      %th.span1 SA
      %th.span1 GA
      %th.span1 SV
      %th.span1 SV%
    %tbody
      - @goalies.each do |goalie|
        %tr
          %td
            = [goalie.player.first_name, goalie.player.last_name].join(" ")
            = "*" if goalie.player.substitute?
          %td= goalie.games_played
          %td= goalie.minutes_played
          %td= goalie.shots_against
          %td= goalie.goals_against
          %td= goalie.saves
          %td= number_with_precision goalie.save_percentage, :precision => 3

