- title "#{@team.name} #{@season.name} Statistics"
- content_for :banner do
  .row.banner
    = render :partial => "team", :locals => { :team => @team, :class_name => "col-xs-12" }
%h3 Player Statistics
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th NAME
      %th.span1 GP
      %th.span1 G
      %th.span1 A
      %th.span1 PTS
      %th.span1 PEN
      %th.span1 PIM
      %th.span1 MNR
      %th.span1 MJR
      %th.span1 MSC
      %th.span1 GAME      
    %tbody
      - @players.each do |player|
        %tr
          %td
            = [player.first_name, player.last_name].join(" ")
            = "*" if player.substitute?
          %td= player.record.gp
          %td= player.record.g
          %td= player.record.a
          %td= player.record.pts
          %td= player.record.pen
          %td= player.record.pim
          %td= player.record.pen_minor
          %td= player.record.pen_major
          %td= player.record.pen_misc
          %td= player.record.pen_game

%h3 Goaltending Statistics
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th NAME
      %th.span1 GP
      %th.span1 TOI
      %th.span1 SA
      %th.span1 GA
      %th.span1 SV
      %th.span1 SV%
    %tbody
      - @goalies.each do |player|
        %tr
          %td
            = [player.first_name, player.last_name].join(" ")
            = "*" if player.substitute?
          %td= player.record.g_gp
          %td= player.record.g_toi
          %td= player.record.g_sa
          %td= player.record.g_ga
          %td= player.record.g_sv
          %td= number_with_precision player.record.g_svp, :precision => 3

