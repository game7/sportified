<table border="1" cellpadding="5" style="border-collapse: collapse;">
  <tr>
    <th>Name</th>
    <th>Short Name</th>
    <th>Related</th>
    <th>Actions</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.short_name %></td>
    <td><%= link_to 'Roster', team_players_path(team) %></td>
    <td>
      <%= link_to 'Show', team %>
      <%= link_to 'Edit', edit_team_path(team) %>
      <%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to 'New Team', new_season_team_path(@season) %>
