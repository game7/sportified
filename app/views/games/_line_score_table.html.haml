%table.table.table-bordered
  %tbody
    %tr
      %th.team 
      %th.period 1
      %th.period 2
      %th.period 3
      - if @stats.overtime?
        %th.period OT
      %th.total T
    %tr
      %td.team= @stats.away_team_name
      %td.period= @stats.away_goals_1
      %td.period= @stats.away_goals_2
      %td.period= @stats.away_goals_3
      - if @stats.overtime?
        %td.period= @stats.away_goals_ot
      %td.total= @stats.away_goals_total
    %tr
      %td.team= @stats.home_team_name
      %td.period= @stats.home_goals_1
      %td.period= @stats.home_goals_2
      %td.period= @stats.home_goals_3
      - if @stats.overtime?
        %td.period= @stats.home_goals_ot
      %td.total= @stats.home_goals_total
