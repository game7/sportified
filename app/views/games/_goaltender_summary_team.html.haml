%thead
  %tr.team
    %th{ :colspan => 7 } 
      = side == 'away' ? @stats.away_team_name : @stats.home_team_name
  %tr.columns
    %th.player Player
    %th.minutes MIN
    %th.shots SA
    %th.goals GA
    %th.saves Saves
    %th.save_pct SV%
    %th.pim PIM
%tbody
  - goalies = @stats.goaltenders.for_side(side).entries
  - if goalies.count > 0
    - reset_cycle
    - goalies.each do |goalie|
      %tr
        %td.player 
          = show_player_name(@stats, goalie.side, goalie.plr)
          = "##{goalie.plr}" unless goalie.plr.blank?
        %td.minutes #{goalie.min_total}
        %td.shots #{goalie.shots_total}
        %td.goals #{goalie.goals_total}
        %td.saves #{goalie.saves_total}
        %td.save_pct #{goalie.save_percentage.round(3)}
        %td.pim 0
  - else
    %tr
      %td{ :colpsan => 14 } xNo goaltender data has been maintained
