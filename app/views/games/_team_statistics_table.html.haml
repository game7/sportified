- bar_width = 200
.stat
  .goals
    - away_goals = @stats.away_goals_total
    - home_goals = @stats.home_goals_total
    - away_width = away_goals * bar_width  / (away_goals + home_goals)
    - home_width = home_goals * bar_width / (away_goals + home_goals)
    %table.table.table-bordered
      %thead
        %tr
          %th Goals
      %tbody
        %tr
          %td
            %span.bar{ :style => "width: #{away_width}px;"}
            = away_goals
        %tr
          %td
            %span.bar{ :style => "width: #{home_width}px"}
            = home_goals
