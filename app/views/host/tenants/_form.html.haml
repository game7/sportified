= simple_form_for [:host, @tenant] do |f|
  = f.input :name
  = f.input :host
  = f.input :slug, :hint => "WARNING: Changing slug will break file upload paths"
  = f.input :analytics_id
  = f.input :theme
  = f.input :twitter_id
  = f.input :facebook_id
  = f.input :instagram_id
  = f.input :foursquare_id
  = f.input :google_plus_id
  = f.button :wrapped, :cancel => return_url



