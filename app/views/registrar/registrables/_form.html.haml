= simple_form_for [:registrar, @registrable] do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title Basic Info
    .panel-body
      .row
        .col-sm-6
          = f.input :title
      .row
        .col-xs-12
          = f.input :description
      .row
        .col-sm-2
          = f.input :quantity_allowed, { placeholder: 'No Limit' }
  .panel.panel-default
    .panel-heading
      %h3.panel-title Registration Types
    %ul#registration-types.list-group
      = f.simple_fields_for :registration_types do |type|
        = render 'registration_type_fields', f: type
    .panel-footer
      = link_to_add_association 'Add Registration Type', f, :registration_types
  = f.button :wrapped, :cancel => return_url
