%ul.pagination.date_range
  %li.prev
    = link_to "← Back", {:date => prev_date, :division_slug => params[:division_slug]}, :class => "visible-xs"
    = link_to "← Prev #{range} Days", {:date => prev_date, :division_slug => params[:division_slug]}, :class => "visible-sm"
    = link_to "← Previous #{range} Days", {:date => prev_date, :division_slug => params[:division_slug]}, :class => "hidden-xs hidden-sm"
  %li.disabled
    = link_to start_date.strftime('%b %e')+" - "+end_date.strftime("%b %e"), "#"
  %li.next
    = link_to "Next #{range} Days →", {:date => next_date, :division_slug => params[:division_slug]}, :class => "hidden-xs"
    = link_to "Next →", {:date => next_date, :division_slug => params[:division_slug]}, :class => "visible-xs"
