- title "Sign up"

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.submit "Sign in", :class => 'btn btn-primary'
    = render :partial => "devise/shared/links"      
