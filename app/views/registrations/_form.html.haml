= simple_form_for [variant, registration] do |f|
 
  .ui.stackable.grid
    .four.wide.column

      .ui.sticky
        .ui.fluid.card
          .image
            = image_tag variant.product.image.attached? ? variant.product.image : '/image.png'
          .content
            .header= variant.product.title
          - if registration.product.registrable_type == 'Event' && registration.product.registrable.present?
            .extra.content= registration.product.registrable.starts_on.strftime('%a %m/%d/%Y %l:%M %P')
          .extra.content
            .left.floated= variant.title
            .right.floated= "$#{number_with_precision(variant.price, precision: 2)}"

        .ui.vertical.fluid.menu
          %a.item{ href: '#contact' }
            = semantic_icon(:exclamation, :circle, class: [ :red ]) if registration.errors.key?(:email)
            Contact
          %a.item{ href: '#participant' }
            = semantic_icon(:exclamation, :circle, class: [ :red ]) if (registration.errors.keys & %i{first_name last_name birthdate}).any?
            Participant            
          - registration.forms.each do |form|
            %a.item{ href: "##{form.template.name.parameterize}" }
              = semantic_icon(:exclamation, :circle, class: [ :red ]) unless form.errors.empty?
              = form.template.name   
          - if variant.payment_required?         
            .item Payment
    
    .twelve.wide.column

      - unless current_user
        .ui.icon.info.message
          = semantic_icon :user, :circle, :icon
          .content
            .header You Are Not Signed In
            %p
              It's ok.  You don't have to 
              = link_to 'sign in', users.sign_in_path, style: 'text-decoration: underline;'
              != ' '
              to continue... but if you do
              we might be able to make things a little bit easier for you       

      - if current_user && warn_duplicate 
        .ui.icon.info.message
          = semantic_icon :info, :circle, :icon
          .content
            .header You Have Already Registered
            %p
              It looks like you may have already attempted to register for this product.  You 
              might want to take a quick peek at 
              != ' '
              = link_to 'your existing registrations', registrations_path(), target: :blank, style: "text-decoration: underline;"
              != ' '
              so that we don't sign you up twice.

      %a.anchor{ name: :contact }   
      %h3.ui.dividing.header{ style: 'margin-top: 0;' } Contact  
      .three.fields
        = f.input :email
      
      %a.anchor{ name: :participant }
      %h3.ui.dividing.header Participant
      .four.fields
        = f.input :first_name
        = f.input :last_name
      .four.fields
        = f.input :birthdate, html5: true
      
      = f.simple_fields_for :forms do |form|  
        %a.anchor{ name: form.object.template.name.parameterize }
        %h3.ui.dividing.header= form.object.template.name
        - form.object.add_element_accessors
        - form.object.template.elements.each do |element|
          = render "form_elements/#{element.partial}", element: element, builder: form   

      - if registration.potential_duplicate
        %a.anchor{ name: :confirmation }
        %h3.ui.dividing.header Confirmation 
        .ui.icon.negative.message
          = semantic_icon :exclamation, :circle, :icon
          .content
            .header Potential Duplicate Registration
            %p
              :erb
                We've done a quick check and noticed that there are one or more existing registrations
                for a person with the same <strong>Last Name</strong> and <strong>Birthdate</strong>.
            %p
              If you've already been to the checkout screen, entered your credit card or have exeperienced
              any difficulty during registration one of the registrations below may be yours, in which case
              it would be better to resume that registration.
        %table.ui.celled.negative.table
          %thead
            %tr
              %th Name
              %th Birthdate
              %th Started
              %th Status
              %th Action
          %tbody
            - potential_duplicates.each do |dupe|
              %tr
                %td= "#{dupe.first_name} #{dupe.last_name}"
                %td= dupe.birthdate
                %td= "#{time_ago_in_words(dupe.created_at)} ago"
                %td= dupe.status
                %td.collapsing.center.aligned
                  - case dupe.status.downcase
                  - when 'completed'
                    = link_to 'Details', registration_path(dupe.uuid), class: [:ui, :basic, :fluid, :button]
                  - when 'pending'
                    = link_to 'Resume', registration_path(dupe.uuid), class: [:ui, :primary, :fluid, :button]
        = f.input :confirm, label: 'Continue with this New Registration'

      - if variant.payment_required? 
        %a.anchor{ name: :payment }
        %h3.ui.dividing.header Payment 
        .ui.icon.message
          = semantic_icon :cc, :stripe, :icon
          .content
            .header We Collect Payments via Stripe Checkout
            %p
            :erb
              Once you submit your registration you will be redirected to a secure checkout page 
              hosted by <%= link_to 'stripe.com', 'https://stripe.com', target: :blank %>.  Stripe
              will allow you to easily pay using your credit card or mobile wallet (Apple Pay, Google Pay)
              and deliver you a purchase receipt via email.  Upon payment you will be redirected back here
              and presented with a registration confirmation.
            %p
              %strong You registration is not confirmed until the payment step has been completed.


