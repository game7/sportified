<% title 'Game Result' %>
<% breadcrumbs @season.breadcrumbs %>
<%= semantic_form_for( @game.result, :url => league_game_result_path(@game) ) do |f| %>
  <%= f.inputs do %>
    <%= f.inputs :name=> "Scoring" do %>
      <%= f.input :left_team_score, :label => @game.left_team.name, :input_html => { :size => 2 } %>
      <%= f.input :right_team_score, :label => @game.right_team.name, :input_html => { :size => 2 } %>
    <% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
