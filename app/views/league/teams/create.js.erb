
<% if @team.errors.any? %>
  $("#flash_notice").hide(300);
  $("#team_errors").html("<%= escape_javascript(error_messages_for(@team)) %>");
  $("#team_errors").show(300);
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.delete(:notice) )%>");
  $("#flash_notice").show(300);
  $("#teams").html("<%= escape_javascript( render(:partial => "/league/teams/team_cards") )%>");
  clearForm($("form#new_team"));
<% end %>
