.mod-container.mod-game.next
  %h4 
    #{next_game.starts_on.strftime('%a') if next_game}
    %span #{next_game.starts_on.strftime('%b %e') if next_game}
  .mod-content
    .overview
      .home-away vs
      %a{ :href => '#'}
        .logo
          - if next_game && opponent = next_game.opponent(@team.id)
            = image_tag opponent.logo.tiny.url.to_s if opponent.logo.tiny.url
      .venue
        %span #{next_game.starts_on.strftime('%l:%M %p') if next_game}
      .city #{next_game.opponent_name(@team.id) if next_game}            
    .stats
      %ul.stats
        %li Conversation
        %li link
