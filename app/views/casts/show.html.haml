.view{ style: 'height: 100vh;'}
  .left{ style: 'background-color: #f5f5f5; height: 100%; width: 50%; float: left; padding: 40px; padding-top: 0px; text-overflow: ' }
    %h1.page-header Upcoming Events
    %table.table.table-bordered
      %thead
        %tr
          %th Time
          %th Event
          %th{ style: 'text-align: center;' } Room
      %tbody
        - @events.each_with_index do |event, index|
          - font_size = index < 1 ? '48px' : '24px'
          %tr{ style: "font-size: #{font_size};"}
            %td{ rowspan: 2 }= event.starts_on.strftime('%l:%M %p')
            - if event.away_team_name.present?
              %td= event.away_team_name
            - else
              %td{ rowspan: 2 }= event.summary
            %td{ style: 'text-align: center;' }= event.away_team_locker_room.try(:name)
          %tr{ style: "font-size: #{font_size};"}
            - if event.away_team_name.present?
              %td= event.home_team_name
            %td{ style: 'text-align: center;' }= event.home_team_locker_room.try(:name)
  .right{ style: 'background-color: maroon; height: 100%; width: 50%; float: right; display: flex; align-items: center; justify-content: center;' }
    .carousel.slide{ :id => "carousel_cast" }
      .carousel-inner
        - @posts.each_with_index do |post, index|
          %div{ :class => "item#{' active' if index == 0}" }
            - if index == 0
              = image_tag post.image.url
            - unless index == 0
              %img{ :"data-src" => post.image.url,
                    :alt => image_alt(post.image.url) }

:javascript

  (function() {
    // reload every 5 minutes
    setTimeout(function() {
      window.location.reload(true);
    }, (5 * 60 * 1000))
  })();

  $(function(){
    $("#carousel_cast img[data-src]").each(function(index){
      $(this).attr("src", $(this).attr("data-src"));
    });
  });



