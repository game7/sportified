= simple_form_for [:admin, :league, @event] do |f|
  %h3.ui.dividing.header Logistics   
  .fields
    = f.input :program_id, as: :select, collection: @options[:programs], wrapper_html: { class: [:four, :wide] }
    = f.input :season_id, as: :select, collection: [], wrapper_html: { class: [:four, :wide] }
    = f.input :division_id, as: :select, collection: [], wrapper_html: { class: [:four, :wide] }
  .fields
    = f.input :starts_on, html5: true, wrapper_html: { class: [:four, :wide] }
    = f.input :duration, wrapper_html: { class: [:two, :wide] }
  = f.input :all_day, as: :boolean
  = f.input :location_id, as: :select, collection: @options[:locations], wrapper_html: { class: [:four, :wide] }

  %h3.ui.dividing.header Description  
  = f.input :summary
  = f.input :description, as: :text

  = f.button :wrapped, :cancel => return_url

- content_for :javascript do
  :javascript

    $(function() {
      var seasons = JSON.parse('#{raw @options[:seasons].to_json}');
      var divisions = JSON.parse('#{raw @options[:divisions].to_json}');  

      function bindSeasons() {
        var programId = $('#event_program_id').closest('.dropdown').dropdown('get value');
        $('#event_season_id').closest('.dropdown').dropdown({
          fields: {
            name: 'name',
            value: 'id'
          },
          values: (seasons[programId] || [])
        })
      }

      function bindDivisions() {
        var programId = $('#event_program_id').closest('.dropdown').dropdown('get value');        
        $('#event_division_id').closest('.dropdown').dropdown({
          fields: {
            name: 'name',
            value: 'id'
          },
          values: (divisions[programId] || [])
        })
      }

      function onProgramChange() {
        bindSeasons();
        bindDivisions();
      }     


      (function initialize() {
        $('#event_program_id').closest('.dropdown').dropdown({
          onChange: onProgramChange
        })
      })()

    });
