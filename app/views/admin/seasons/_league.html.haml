%h2
  = league.name
  = link_to "Add Team", new_admin_season_team_path(@season), :class => "btn btn-mini"
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Name
      %th Actions
    %tbody
      - @teams.each do |team|
        - if team.league_id == league.id
          %tr
            %td #{team.name}
            %td
              = link_to 'Edit', edit_admin_team_path(team), :class => "btn btn-mini"  
              = link_to 'Delete', [:admin, team], :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-mini"