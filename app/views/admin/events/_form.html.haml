= simple_form_for [:admin, @event] do |f|
  = f.input :season_id, :as => :select, :collection => @season_options if params['action'] == 'new'
  = f.input :league_id, :as => :select, :collection => @league_options if params['action'] == 'new'
  = f.input :starts_on, :as => :string, :input_html => { :value => @event.starts_on ? I18n.l(@event.starts_on) : "" }
  = f.input :duration
  = f.input :all_day, :as => :boolean
  = f.input :venue_id, :as => :select, :collection => @venue_options
  = f.input :summary
  - f.input :description, :as => :text
  = f.input :show_for_all_teams, :as => :boolean
  = f.button :wrapped, :cancel => return_url

- content_for :javascript do
  :javascript
    $(document).ready(function(){
        $("select#event_season_id").change(function(){
            var id_value_string = $(this).val();
            if (id_value_string == "") { 
                // if the id is empty remove all the sub_selection options from being selectable and do not do any ajax
                $("select[id$='league_id'] option").remove();
                var row = "<option value=\"" + "" + "\">" + "" + "</option>";
                $(row).appendTo("select[id$='league_id']");
            }
            else {
              $.ajax({
                  dataType: "json",
                  cache: false,
                  url: '#{admin_leagues_path}?season_id=' + id_value_string,
                  timeout: 2000,
                  error: function(XMLHttpRequest, errorTextStatus, error){
                      alert("Failed to submit : "+ errorTextStatus+" ;"+error);
                  },
                  success: function(data){  
                      $("select[id$='league_id'] option").remove();
                      var row = "<option value=\"" + "" + "\">" + "" + "</option>";
                      $(row).appendTo("select[id$='league_id']"); 
                      $.each(data, function(i, j){
                          row = "<option value=\"" + j._id + "\">" + j.name + "</option>";
                          $(row).appendTo("select[id$='league_id']");
                      });
                   }
              });
            };
        });
    });
    
    