
<% if @penalty.errors.any? %>
  $("#flash_notice").hide(300);
  $('#dialog-modal').html("<%= escape_javascript( render(:partial => "admin/hockey_penalties/new" ) )%>");
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.discard(:notice) )%>");
  $("#flash_notice").show(300);
  $("#penalties table").replaceWith("<%= escape_javascript( render(:partial => "admin/hockey_penalties/table", :locals => { :penalties => @statsheet.penalties } ) )%>");
  $('#dialog-modal').dialog("close");
<% end %>
