- edit_mode = %w{edit update}.include?(params[:action]) ? true : false
= simple_form_for( @penalty, :url => url, :remote => true ) do |f|
  = f.input :per, :collection => Hockey::Penalty.periods, :disabled => edit_mode, :input_html => {:class => "span1"}
  = f.input :min, :maxlength => 2, :pattern => "[0-9]*", :disabled => edit_mode, :input_html => {:class => "span1"}
  = f.input :sec, :maxlength => 2, :pattern => "[0-9]*", :disabled => edit_mode, :input_html => {:class => "span1"}
  = f.input :side, :collection => @sides, :include_blank => 'Choose Team', :disabled => edit_mode
  = f.input :plr, :maxlength => 2, :pattern => "[0-9]*", :disabled => edit_mode, :input_html => {:class => "span1"}
  = f.input :inf
  = f.input :dur, :maxlength => 2, :pattern => "[0-9]*", :disabled => edit_mode, :input_html => {:class => "span1"}
  = f.input :severity, :collection => Hockey::Penalty.severities, :disabled => edit_mode, :input_html => {:class => "span2"}
  = f.input :start_per, :collection => Hockey::Penalty.periods, :input_html => {:class => "span1"}
  = f.input :start_min, :maxlength => 2, :pattern => "[0-9]*", :input_html => {:class => "span1"}
  = f.input :start_sec, :maxlength => 2, :pattern => "[0-9]*", :input_html => {:class => "span1"}
  = f.input :end_per, :collection => Hockey::Penalty.periods, :input_html => {:class => "span1"}
  = f.input :end_min, :maxlength => 2, :pattern => "[0-9]*", :input_html => {:class => "span1"}
  = f.input :end_sec, :maxlength => 2, :pattern => "[0-9]*", :input_html => {:class => "span1"}
:javascript
  $(function() {
    var penalties = #{Hockey::Penalty.infractions.to_json};
    $('#hockey_penalty_inf').autocomplete({
      source: penalties
    });
  });

