- title "Teams"
- last_division = ""

#{select("season", :id, @season_links, { :selected => request.fullpath }, { :class => "redirect_to" })}
- @season.divisions.asc(:name).each do |division|
  %h2
    = division.name + " Division"
    = link_to 'New Team', new_admin_season_team_path(:season_id => @season.id, :division_id => division.id), :class => 'btn btn-mini'
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th Name
        %th Actions
    %tbody
      - division.teams.asc(:name).each do |team|
        %tr
          %td= team.name
          %td
            = link_to "Edit", edit_admin_team_path(team), :class => 'btn btn-mini'
            = link_to 'Delete', [:league, :admin, team], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini'
