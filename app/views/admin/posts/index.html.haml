- title 'Posts'
.well
  = link_to 'New Post', new_admin_post_path(), :class => 'btn'
.pagination
  %ul
    - @tags.each do |tag|
      %li
        =link_to tag.humanize, ''
%table.table.table-bordered.table-striped
  - @posts.each do |post|
    %tr
      %td{ :width => "100"}
        - if post.image && post.image.url.presence
          = image_tag post.image.thumb.url
      %td
        %h4
          = post.title
        - post.tags_array.each do |tag|
          %span.label.label-info= tag
      %td{ :width => "200" }
        = link_to 'Edit', edit_admin_post_path(post), :class => 'btn'
        = link_to 'Delete', [:admin, post], :confirm => 'Are you sure?', :method => :delete, :class => 'btn'