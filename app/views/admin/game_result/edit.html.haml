- title 'Game Result'
- wrapper class: [:ui, :container]
= simple_form_for @form, :url => admin_game_result_path(@game) do |f|
  .fields
    = f.input :away_team_score, label: "#{@game.away_team_name} Score", wrapper_html: { class: [:two, :wide]}
    = f.input :home_team_score, label: "#{@game.home_team_name} Score", wrapper_html: { class: [:two, :wide]}
  = f.input :completion, collection: League::Game.completion.options, wrapper_html: { class: [:four, :wide]}
  = f.input :result, collection: League::Game.result.options, wrapper_html: { class: [:four, :wide]}
  = f.input :exclude_from_team_records, :as => :boolean
  = f.button :wrapped, :cancel => return_url
