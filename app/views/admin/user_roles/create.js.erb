
<% if @role.errors.any? %>
  $("#flash_notice").hide(300);
  $("#role_errors").html("<%= escape_javascript(error_messages_for(@role)) %>");
  $("#role_errors").show(300);
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.delete(:notice) )%>");
  $("#flash_notice").show(300);
  $("#user_roles").html("<%= escape_javascript( render(:partial => "grid", :locals => { :user => @user } ) )%>");
<% end %>
