%table.ui.celled.striped.table
  %thead
    %tr
      %th Tenant    
      %th Title
      %th Action
  %tbody
    - user.roles.for_tenant(Tenant.current).each do |role|
      %tr
        %td= role.tenant.name      
        %td= role.title
        %td= link_to 'Delete', [:admin, @user, role], confirm: 'Are you sure?', remote: true, method: :delete, class: [:ui, :mini, :primary, :button]
