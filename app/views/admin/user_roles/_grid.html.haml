%table
  %caption Roles
  %thead
    %tr
      %th{:scope => 'col'} Title
      %th{:scope => 'col'} Subject
      %th{:scope => 'col'} Action
  %tbody
    - user.roles.for_site(Site.current).each do |role|
      %tr
        %td #{role.title}
        %td #{role.subject_id}
        %td #{link_to 'Delete', [:admin, @user, role], :confirm => 'Are you sure?', :remote => true, :method => :delete}
