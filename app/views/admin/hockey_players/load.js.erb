
<% if @statsheet.errors.any? %>
  $("#flash_notice").hide(300);
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.discard(:notice) )%>");
  $("#flash_notice").show(300);
  $("#players-<%=@statsheet.away_team.id%>").html("<%= escape_javascript( render(:partial => "admin/hockey_players/table", :locals => { :players => @statsheet.skaters.away } ) )%>");
  $("#players-<%=@statsheet.home_team.id%>").html("<%= escape_javascript( render(:partial => "admin/hockey_players/table", :locals => { :players => @statsheet.skaters.home } ) )%>");
<% end %>
