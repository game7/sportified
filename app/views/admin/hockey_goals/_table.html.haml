%table
  %thead
    %tr
      %th 
      %th PER
      %th TIME
      %th TEAM
      %th G
      %th A
      %th A
      %th STR
      %th 
  %tbody
    - goals = goals.sorted_by_time.entries
    - if goals.count > 0
      - goals.each_with_index do |g, i|
        %tr
          %td #{(i+1).to_s}
          %td #{g.per}
          %td #{g.time}
          %td #{g.side == 'left' ? @statsheet.left_team_name : @statsheet.right_team_name}
          %td #{g.plr}
          %td #{g.a1}
          %td #{g.a2}
          %td #{g.str}
          %td 
            = link_to 'Delete', admin_hockey_statsheet_goal_path(@statsheet, g), :remote => true, :confirm => 'Are you sure?', :method => :delete, :title => 'Delete this goal'
    - else
      %tr
        %td{ :colspan => 9 } No goals have been entered

