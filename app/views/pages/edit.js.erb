$('body').append("<%= escape_javascript( render(:partial => "edit", :layout => false ) )%>");
var $modal = $('.modal.edit_page');
$modal.find(':submit').click(function() {
  Rails.fire($modal.find('form')[0], 'submit')
})
$modal.modal({
  onHidden: function() {
    $(this).remove();
  }
}).modal('show');
