- title 'Pages'

- content_for :javascript do
  :javascript
    $(function() {
      $("#pages ul").sortable({
        handle: ".handle",
        revert: "true",
        opacity: 0.7,
        placeholder: "ui-state-highlight",
        update: function( event, ui ) {  
          var items = $(this).sortable('serialize');
          $.ajax({
            type: 'post',
            data: items ,
            dataType: 'json',
            url: '#{position_pages_path(@page)}'
          }); 
        }
      });
      $("a[rel='tooltip']").tooltip();
    });

.navbar
  .navbar-inner
    = link_to icon('plus')+' Add New Page', new_page_path, :class => 'btn'
%section#pages.tree.well
  = render 'tree'
.navbar
  .navbar-inner
    = link_to icon('plus')+' Add New Page', new_admin_page_path, :class => 'btn'

:css
  .ui-state-highlight { height: 1.5em; line-height: 1.2em; }
