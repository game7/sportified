<% if @page.errors.any? %>
  $('.form.edit_page').replaceWith($("<%= escape_javascript( render(:partial => "edit", :layout => false ) )%>").find('.form.edit_page'))
<% else %>
  $("#flash_success").html("<%= escape_javascript( flash.discard(:notice) )%>");
  $("#flash_success").slideDown();
  $("#page-title").html('<%= @page.title %>');
  document.title = '<%= "#{@page.title} - #{Tenant.current.name}" %>';
  $('.modal.edit_page').modal('hide');  
<% end %>