!!!
%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : 'Untitled'
    = stylesheet_link_tag *(['application'] + @stylesheets)
    = javascript_include_tag 'jquery-1.4.3.min'
    = javascript_include_tag 'rails'
    = csrf_meta_tag
    = yield(:head)
  %body
    %div{ :id => "hat" }
      %div{ :id => "hat-container" }
        %ul{ :class => "user-tasks" }
          = render "devise/menu/login_items"
          = render "devise/menu/user_items"
        .clear
    %div{ :id => "container" }
      %div{ :id => "header" }
        %a{ :href => "" }
          [Site Name]
        = render "layouts/site_navigation"
        .clear
        = render "layouts/breadcrumbs"
        = render "layouts/area_navigation"
      %div{ :id => "main" }
        %div{ :id => "page_header" }
          = content_tag :h1, yield(:title) if show_title?
        %div{ :id => "content" }
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"
          = yield
    %div{ :id => "footer" }

