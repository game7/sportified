$('body').append("<%= escape_javascript( render(partial: "blocks/#{@block.class.to_s.demodulize.pluralize.underscore}/edit") )%>");
var $modal = $('.modal.edit_block');
$modal.find(':submit').click(function() {
  Rails.fire($modal.find('form')[0], 'submit')
})
$modal.find('button .cancel').click(function() {
  $modal.modal('hide')
})
$modal.find('select.ui.dropdown').dropdown()
$modal.modal({
  closable: false,
  onHidden: function() {
    $(this).remove();
  }
}).modal('show');
