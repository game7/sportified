.ui.tiny.modal.edit_block
  .header Edit News Feed
  .content
    = simple_form_for @block, url: page_blocks_feed_path(@page, @block), remote: true do |f|
      = f.input :title
      = f.input :post_count
      = f.input :divider, as: :boolean
      = f.input :tags, as: :tags, source: :post
  .actions
    %button.ui.primary.button{ type: :submit } Save
    %button.ui.cancel.button Cancel   