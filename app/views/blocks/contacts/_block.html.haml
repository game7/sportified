.ui.fluid.card
  .content
    .header= [block.first, " ", block.last].join
    - if block.title.presence
      .meta= block.title
    - if block.phone.presence
      .phone{ style: 'margin-top: 5px;' }
        = semantic_icon(:phone)
        = block.phone
    - if block.email.presence
      .email
        =semantic_icon(:mail)
        %a{ :href => "mailto:#{block.email}"}= block.email
