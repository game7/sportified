.row-fluid
  = vertical_form_for @block, :as => :block, :url => page_block_path(@page, @block), :remote => true do |f|  
    = f.input :title, :input_html => { :class => "span12" }
    = f.input :caption, :input_html => { :class => "span12" }
    = f.input :body, :as => :text, :input_html => { :class => "span12" }
  
