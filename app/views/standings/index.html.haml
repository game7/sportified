- title 'Standings'
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th TEAM
      %th GP
      %th W
      %th L
      %th PTS
      %th GS
      %th GA
      %th +/-
    %tbody
      - @teams.each do |team|
        %tr
          %td= team.name
          %td= team.record.gp
          %td= team.record.w
          %td= team.record.l
          %td= team.record.pts
          %td= team.record.scored
          %td= team.record.allowed
          %td= team.record.margin

