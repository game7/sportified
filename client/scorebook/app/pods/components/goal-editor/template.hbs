  {{/nav-tab}}
  {{#nav-tab url=(query-params tab="team")}}
    {{editor/team-display team=team}}
  {{/nav-tab}}
  {{#nav-tab url=(query-params tab="scoredBy")}}
    {{editor/skater-display label="Scored By" skater=scoredBy}}
  {{/nav-tab}}
  {{#nav-tab url=(query-params tab="assistedBy")}}
    {{editor/skater-display label="Assisted By" skater=assistedBy}}
