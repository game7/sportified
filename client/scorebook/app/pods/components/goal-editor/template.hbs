  {{editor/time-picker game=game selected=time onSelection=(action "setTime")}}
{{/tab-content}}
{{#tab-content name="team" selected=tab}}
  {{editor/team-picker game=game selected=team onSelection=(action "setTeam")}}
{{/tab-content}}
{{#tab-content name="scoredBy" selected=tab}}
  {{editor/skater-picker skaters=teamSkaters selected=scoredBy onSelection=(action "setScoredBy")}}
{{/tab-content}}
{{#tab-content name="assistedBy" selected=tab}}
  {{editor/skater-picker skaters=teamSkaters selected=assistedBy onSelection=(action "setAssistedBy")}}
{{/tab-content}}
{{#tab-content name="alsoAssistedBy" selected=tab}}
  {{editor/skater-picker skaters=teamSkaters selected=alsoAssistedBy onSelection=(action "setAlsoAssistedBy")}}
{{/tab-content}}
