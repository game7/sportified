= form_for( @goal, :url => admin_hockey_statsheet_goals_path(@statsheet.id), :remote => true ) do |f|
  .row
    .field
      = f.label :per
      = select :hockey_goal, :per, HockeyGoal.periods 
    .field
      = f.label :min
      = f.text_field :min, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :sec
      = f.text_field :sec, :maxlength => 2, :pattern => "[0-9]*"
  .row
    .field
      = f.label :side, 'Team'
      = select :hockey_goal, :side, @sides, :include_blank => 'Choose Team'
  .row
    .field
      = f.label :plr, 'Goal'
      = f.text_field :plr, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :a1, 'Assist'
      = f.text_field :a1, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :a2, 'Assist'
      = f.text_field :a2, :maxlength => 2, :pattern => "[0-9]*"
  .row
    .field
      = f.label :str, 'Strength'      
      = select :hockey_goal, :str, HockeyGoal.strengths



