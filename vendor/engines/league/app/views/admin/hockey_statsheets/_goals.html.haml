%table
  %tr
    %td 
    %td PER
    %td TIME
    %td TEAM
    %td G
    %td A
    %td A
    %td STR
    %td 
  - goals.sorted_by_time.each_with_index do |g, i|
    %tr
      %td #{(i+1).to_s}
      %td #{g.per}
      %td #{g.time}
      %td #{g.side == 'L' ? @statsheet.left_team_name : @statsheet.right_team_name}
      %td #{g.plr}
      %td #{g.a1}
      %td #{g.a2}
      %td #{g.str}
      %td 
        = link_to 'Delete', admin_hockey_statsheet_goal_path(@statsheet, g), :remote => true, :confirm => 'Are you sure?', :method => :delete, :title => 'Delete this goal'

