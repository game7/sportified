
<% if @penalty.errors.any? %>
  $("#flash_notice").hide(300);
  $('#dialog-modal').html("<%= escape_javascript( render(:partial => "admin/hockey_penalties/new" ) )%>");
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.delete(:notice) )%>");
  $("#flash_notice").show(300);
  $("#penalties").html("<%= escape_javascript( render(:partial => "admin/hockey_statsheets/penalties", :locals => { :penalties => @statsheet.events.penalties } ) )%>");
  $('#dialog-modal').dialog("close");
<% end %>
