= form_for( @penalty, :url => url, :remote => true ) do |f|
  .row
    .field
      = f.label :per
      = select :hockey_penalty, :per, HockeyPenalty.periods , :selected => @penalty.per
    .field
      = f.label :min
      = f.text_field :min, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :sec
      = f.text_field :sec, :maxlength => 2, :pattern => "[0-9]*"
  .row
    .field
      = f.label :side, 'Team'
      = select :hockey_penalty, :side, @sides, :include_blank => 'Choose Team', :selected => @penalty.side
    .field
      = f.label :plr, 'Player'
      = f.text_field :plr, :maxlength => 2, :pattern => "[0-9]*"
  .row
    .field
      = f.label :inf, 'Infraction'
      = f.text_field :inf
    .field
      = f.label :dur, 'Duration'
      = f.text_field :dur, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :severity, 'Severity'
      = select :hockey_penalty, :severity, HockeyPenalty.severities, :selected => @penalty.severity
  .row
    .field
      = f.label :start_per, 'Period'
      = select :hockey_penalty, :start_per, HockeyPenalty.periods, :selected => @penalty.start_per
    .field
      = f.label :start_min, 'Min'
      = f.text_field :start_min, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :start_sec, 'Sec'
      = f.text_field :start_sec, :maxlength => 2, :pattern => "[0-9]*"
  .row
    .field
      = f.label :end_per, 'Period'
      = select :hockey_penalty, :end_per, HockeyPenalty.periods, :selected => @penalty.end_per
    .field
      = f.label :end_min, 'Min'
      = f.text_field :end_min, :maxlength => 2, :pattern => "[0-9]*"
    .field
      = f.label :end_sec, 'Sec'
      = f.text_field :end_sec, :maxlength => 2, :pattern => "[0-9]*"
:javascript
  $(function() {
    var penalties = #{@infractions.to_json};
    $('#hockey_penalty_inf').autocomplete({
      source: penalties
    });
  });

