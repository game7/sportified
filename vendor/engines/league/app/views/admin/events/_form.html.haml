= semantic_form_for [:admin, @event] do |f|
  = f.inputs :name => "Logistics" do
    = f.input :season_id, :as => :select, :collection => @seasons
    = f.input :starts_on, :as => :string, :input_html => { :value => @event.starts_on ? I18n.l(@event.starts_on) : "" }
    = f.input :duration
    = f.input :all_day, :as => :boolean
    = f.input :venue_id, :as => :select, :collection => @venues
  = f.inputs :name => "Details" do
    = f.input :summary
    = f.input :description, :as => :text
  = f.inputs :name => "Visibility" do
    %li{ :class => 'checkboxes optional', :id => 'event_division_ids_input' }
      %label{ :for => 'event_division_ids' } Divisions
      %ol
        - @divisions.each_with_index do |d, i|
          %li
            = check_box_tag "event[division_ids][]", d.id, @event.division_ids.include?(d.id)
            = d.name
    = f.input :show_for_all_teams, :as => :boolean
  = f.buttons do
    = f.commit_button
    %li #{link_to 'Cancel', session[:return_to]}



