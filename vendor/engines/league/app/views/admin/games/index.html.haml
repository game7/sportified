- title 'Games'

.controls
  .left
    .season Season: #{render 'select_season'}
    .division Division: #{render 'select_division'}
.clear
%table
  %tr
    %td Date
    %td Time
    %td{:colspan => 3} Description
    %td Actions
  - @games.each do |game|
    %tr
      %td #{game.starts_on.strftime('%a %b %e, %Y')}
      %td #{game.starts_on.strftime('%l:%M %p')}
      = render :partial => 'game_description', :locals => { :game => game }
      %td 
        = link_to "Edit", edit_admin_game_path(game)
        = " | "
        = link_to "Delete", [:admin, game], :confirm => 'Are you sure?', :method => :delete
        - if game.can_add_result?
          = " | "
          = link_to "Post Score", new_admin_game_result_path(game)
        - if game.can_delete_result?
          = " | "
          = link_to "Drop Score", admin_game_result_path(game), :confirm => 'Are you sure?', :method => :delete
        
= link_to "New Game", new_admin_game_path(:season_id => params[:season_id])
