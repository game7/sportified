
<% if @standings_column.errors.any? %>
  $("#flash_notice").hide(300);
  $("#standings_column_errors").html("<%= escape_javascript(error_messages_for(@standings_column)) %>");
  $("#standings_column_errors").show(300);
<% else %>
  $("#flash_notice").html("<%= escape_javascript( flash.delete(:notice) )%>");
  $("#flash_notice").show(300);
  $("#standings").html("<%= escape_javascript( render(:partial => "/admin/divisions/standings_column_table", :locals => { :team_records => @team_records, :columns => @columns } ) )%>");
  clearForm($("form.standings_column"));
<% end %>
