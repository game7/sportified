%table
  %thead
    %tr
      %th{ :scope => 'col' } GP
      %th{ :scope => 'col' } #
      %th{ :scope => 'col' } NAME
      %th{ :scope => 'col' } 
  %tbody
    - if players.count == 0
      %tr
        %td{ :colspan => 4 } No players have been loaded
    - else
      - players.each do |p|
        %tr
          %td #{p.played ? 'X' : ''}
          %td #{p.num}
          %td #{p.name}
          %td
            = link_to 'Edit', edit_admin_hockey_statsheet_player_path(@statsheet, p), :remote => true, :title => 'Edit this player'
