- title "Teams"

.controls
  .left
    .season Season: #{render 'season_select'}
    .division Division: #{render 'division_select'}
.clear
%table
  %tr
    %th Name
    %th Division
    %th Season
    %th Actions
  - @teams.each do |team|
    %tr
      %td #{team.name}
      %td #{team.division.name}
      %td #{team.season.name}
      %td #{ link_to "Edit", edit_admin_team_path(team)} | #{link_to 'Delete', [:admin, team], :confirm => 'Are you sure?', :method => :delete}
= link_to 'New Team', new_admin_team_path(:season_id => params[:season_id], :division_id => params[:division_id])
