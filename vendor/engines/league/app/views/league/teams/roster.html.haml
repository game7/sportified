- title @team.name + ' Roster - ' + @season.name

.controls.left
  Team: #{select("team", :id, @team_links, { :selected => request.fullpath }, { :class => "redirect_to" })}
.controls.right

.clear

.mod-container.mod-table.mod-no-header-footer
  .mod-content
    %table.stat#roster{ :cellspacing => "1" }
      %thead
        %tr.col-head
          %td NUM
          %td NAME
      %tbody
        - @players.each do |player|
          %tr{ :class => cycle("odd","even") }
            %td #{player.jersey_number}
            %td
              = player.full_name


