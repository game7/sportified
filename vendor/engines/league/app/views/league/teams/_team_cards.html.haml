- @teams.each do |team|
  .team-box
    .team-logo
      #{image_tag team.logo.tiny_thumb.url.to_s if team.logo?}
    .team-name 
      #{team.name}
    .team-nav
      = link_to 'Home', league_team_path(@division.slug, @season.slug, team.slug)
      = " | "
      = link_to 'Schedule', league_team_schedule_path(@division.slug, @season.slug, team.slug)
      = " | "
      = link_to 'Roster', league_team_roster_path(@division.slug, @season.slug, team.slug)
      = " | "
      Stats
.clear

