- title @team.name

= content_for :banner do
  = render :partial => 'team_banner', :locals => { :team => @team }
 
#left-col
  #season
    Season
  #current-game
    = render :partial => 'current_game', :object => @current_game
  #next-game
    = render :partial => 'next_game', :object => @next_game
  #team-feed
    News Feed
  #team-roster
    = render :partial => 'small_roster', :locals => { :title => "#{@team.season_name} #{@team.division_name} Roster", :players => @players }
      
#right-col
  .mod-container.mod-no-footer.mod-data-table
    .mod-header
      %h4
        = "#{@team.season_name} #{@team.division_name} Division Standings"
    .mod-content
      = render 'records'
  .mod-container.mod-no-footer.mod-data-table
    .mod-header
      %h4 Team History
    .mod-content
      %table.mod-data
        %thead
          %tr
            %th{ :scope => "col"} Season
            %th{ :scope => "col"} W
            %th{ :scope => "col"} L
            %th{ :scope => "col"} SOL
            %th{ :scope => "col"} PTS
        %tbody
          %tr
            %td Summer 2011
            %td 10
            %td 2
            %td 0
            %td 20
          %tr
            %td Winter 2010
            %td 10
            %td 2
            %td 0
            %td 20
