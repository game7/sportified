- title @team.name

= content_for :banner do
  = render :partial => 'team_banner', :locals => { :team => @team }

:css
  #left-col, #right-col {
    float: left;
    margin-right: 6px;
  }
  #left-col {
    width: 614px;
  }
  #right-col { 
    width: 304px;
  }
  
#left-col
  This is the left
#right-col
  .mod-container.mod-no-footer.mod-data-table
    .mod-header
      %h4
        = "#{@team.season_name} #{@team.division_name} Division Standings"
    .mod-content
      %table.mod-data
        %thead
          %tr
            %th{ :scope => "col"} TEAM
            %th{ :scope => "col"} W
            %th{ :scope => "col"} L
            %th{ :scope => "col"} SOL
            %th{ :scope => "col"} PTS
        %tbody
          %tr
            %td Kings
            %td 10
            %td 2
            %td 0
            %td 20
  .mod-container.mod-no-footer.mod-data-table
    .mod-header
      %h4 Team History
    .mod-content
      %table.mod-data
        %thead
          %tr
            %th{ :scope => "col"} Season
            %th{ :scope => "col"} W
            %th{ :scope => "col"} L
            %th{ :scope => "col"} SOL
            %th{ :scope => "col"} PTS
        %tbody
          %tr
            %td Summer 2011
            %td 10
            %td 2
            %td 0
            %td 20
          %tr
            %td Winter 2010
            %td 10
            %td 2
            %td 0
            %td 20
