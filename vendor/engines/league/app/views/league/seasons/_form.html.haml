= semantic_form_for [:league, @division, @season] do |f|
  = f.inputs do
    = f.input :name
    = f.input :starts_on
    = f.input :ends_on
  = f.buttons do
    = f.commit_button
    - unless @season.new_record?
      %li #{link_to 'Cancel', league_season_friendly_path(@season.division.slug, @season.slug)}
    - else
      %li #{link_to 'Cancel', league_path}

