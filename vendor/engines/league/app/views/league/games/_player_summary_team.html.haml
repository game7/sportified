%thead
  %tr.title
    %th{ :colspan => 6 } 
      = side == 'L' ? @stats.left_team_name : @stats.right_team_name
  %tr.columns
    %th.player Player
    %th.goal G
    %th.assists A
    %th.points PTS
    %th.pen PEN
    %th.pim PIM
%tbody
  - players = @stats.players.for_side(side).entries
  - if players.count > 0
    - reset_cycle
    - players.each do |player|
      %tr{ :class => "#{cycle('odd', 'even')}" }
        %td.player 
          = player.name
          = "##{player.num}" unless player.num.blank?
        %td.goal #{player.g}
        %td.assists #{player.a}
        %td.points #{player.pts}
        %td.pen #{player.pen}
        %td.pim #{player.pim}
  - else
    %tr
      %td{ :colpsan => 6 } No player data has been maintained

    
