- title 'Pages'

- javascript("jquery-ui.min.js")

:javascript
  $(function() {
    $("#pages ul").sortable({
      revert: "true",
      opacity: 0.7,
      placeholder: "ui-state-highlight",
      update: function( event, ui ) {  
        var items = $(this).sortable('toArray');
        alert(items);
      }
    });   
  });
- content_for :sidebar do
  %ul
    %li #{link_to 'Add New Page', new_page_path}

= Site.current.name
%br/
- @pages.each do |page|
  != (("|&nbsp;&nbsp;&nbsp;&nbsp;") * page.depth) + "|---"
  = link_to page.title, page.url #page_friendly_path(page.path)
  [#{page.depth}]
  (#{link_to "Edit Settings", edit_page_path(page.id)} | #{link_to "Edit Content", page_blocks_path(page.id)})
  %br/
%br/
#pages
  = render 'tree'

:css
  .ui-state-highlight { height: 1.5em; line-height: 1.2em; }
  #pages ul { list-style-type: square; }

  



  

