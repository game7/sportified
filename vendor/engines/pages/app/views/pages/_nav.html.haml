
:css
  .area-nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    border: 1px solid #666666;
  }
  .area-nav li {
    padding: 2px 6px;
  }
  .area-nav a {
    width: 100%;
    text-decoration: none;
  }
  .area-nav .ancestor {
    font-weight: bold;
  }

.area-nav
  %ul
    - if @area_ancestors
      - @area_ancestors.each do |a|
        %li{ :class => "ancestor #{a[:selected] ? 'selected' : ''}" }
          - if a[:url].present?
            = link_to a[:title], a[:url]
          - else
            = a[:title]
    - if @area_descendants
      - @area_descendants.each do |a|
        %li{ :class => "descendant #{a[:selected] ? 'selected' : ''}" }
          - if a[:url].present?
            = link_to a[:title], a[:url]
          - else
            = a[:title]
  
