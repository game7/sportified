- title @page.title

- content_for :sidebar do
  = render 'navigation'
  = render 'shared/page_options' if can? :edit, @page


.blocks
  .panel{ :style => "width: 100%;"}
    - @blocks_for_panel[:default].each do |b| 
      = render :partial => "blocks/show", :locals => { :block => b }
  - @page.layouts.each do |layout|
    = render :partial => 'layouts/wireframe', :locals => { :layout => layout, :height => 0, :blocks => @blocks_for_panel }
.clear

:css
  .layout-panel { float: left; }


