- title @page.title

- content_for :sidebar do
  %strong #{@page.title}
  %ul
    - @page.children.asc(:position).each do |child|
      %li #{link_to child.title, get_page_url(child)}
  - if @page.parent_id.present?
    %strong Related Pages
    %ul
      - @page.siblings.asc(:position).each do |sibling|
        %li #{link_to sibling.title, get_page_url(sibling)}
  = render 'shared/page_options'


.blocks
  .panel{ :style => "width: 100%;"}
    - @blocks_for_panel[:default].each do |b| 
      = render :partial => "blocks/show", :locals => { :block => b }
  - @page.layouts.each do |layout|
    = render :partial => 'layouts/wireframe', :locals => { :layout => layout, :height => 0, :blocks => @blocks_for_panel }
.clear

:css
  .layout-panel { float: left; }


