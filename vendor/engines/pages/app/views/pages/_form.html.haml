= semantic_form_for [@page] do |f|
  %fieldset
    %legend Basic
    = f.input :title
    = f.input :draft, :as => :boolean
    %fieldset
      %legend Positioning    
    = f.input :parent_id, :collection => @parent_options
    = f.input :show_in_menu, :as => :boolean
    %fieldset
      %legend Navigation
    = f.input :skip_to_first_child, :as => :boolean
    = f.input :link_url
    %fieldset
      %legend Search Engine Optimization
    = f.input :meta_keywords
    = f.input :meta_description
  = f.buttons do
    = f.commit_button
    %li #{link_to 'Cancel', session[:return_to]}
