= semantic_form_for [@page, @block], :html => {:target => 'frame', :multipart => true} do |f|
  = f.inputs do
    - if @block.image?
      %li 
        = image_tag @block.image.thumb.url.to_s
    = f.input :image, :as => :file
    = f.input :image_cache, :as => :hidden
    = f.input :link_to, :as => :text
    = f.input :image_width
    = f.input :image_height
%iframe{ :id => 'frame', :name => 'frame', :style => 'display: none;' }
