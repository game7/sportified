- title 'Items'
- page_actions do
  = link_to 'Connect with Stripe', @stripe_url, :class => 'btn btn-primary' if current_user_is_admin?
  = link_to 'New Item', new_item_path, :class => 'btn btn-primary' if current_user_is_admin?
.list-group
  - @items.each do |item|
    .list-group-item
      %h4.list-group-item-heading= link_to item.title, item
      %p= item.description
      %p.list-group-item-text= link_to 'More Info', item
