{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "~/*": ["app/javascript/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["**/node_modules", "**/public"]
}
