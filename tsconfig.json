{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2020",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "tmp",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}